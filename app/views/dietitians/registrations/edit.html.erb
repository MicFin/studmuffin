<div class="container">
  <div class="row"> 
    <div class="col-xs-6">
      <div class="row">
        <div class="col-xs-10">
          <%= image_tag("logo.png", class: "img-responsive") %>
        </div>
      </div>
      <h2>Edit Your Profile</h2>

      <%= simple_form_for(resource, :url => dietitian_registration_path, html: { method: :put, :multipart => true }) do |f| %>
        <%= f.error_notification %>

        <div class="form-inputs">
          <div class="form-group col-xs-12">
            <%= f.input :first_name, :required => true, :autofocus => true, input_html: {class: "form-indent"} %>
          </div>
          <div class="form-group col-xs-12">
            <%= f.input :last_name, :required => true, :autofocus => true, input_html: {class: "form-indent"} %>
          </div>
          <div class="form-group col-xs-12">
            <%= f.input :email, :required => true, :autofocus => true, input_html: {class: "form-indent"} %>
          </div>
          <div class="form-group col-xs-12">
            <%= f.input :years_exp, :required => true, :autofocus => true, input_html: {class: "form-indent"} %>
          </div>
          <div class="form-group col-xs-12">
            <%= f.input :undergrad, :required => true, :autofocus => true, input_html: {class: "form-indent"} %>
          </div>
          <div class="form-group col-xs-12">
            <%= f.input :graduate, :required => true, :autofocus => true, input_html: {class: "form-indent"} %>
          </div>
          <div class="form-group col-xs-12">
            <%= f.input :certifs, :required => true, :autofocus => true, input_html: {class: "form-indent"} %>
          </div>
         <div class="form-group col-xs-12">
            <%= f.input :specialties, :required => true, :autofocus => true, input_html: {class: "form-indent"} %>
          </div>
          <div class="form-group col-xs-12">
            <%= f.input :fav_eat, :required => true, :autofocus => true, input_html: {class: "form-indent"} %>
          </div>
          <div class="form-group col-xs-12">
            <%= f.input :fav_cook, :required => true, :autofocus => true, input_html: {class: "form-indent"} %>
          </div>
          <div class="form-group col-xs-12">
            <%= f.input :fav_snack, :required => true, :autofocus => true, input_html: {class: "form-indent"} %>
          </div>
          <div class="form-group col-xs-12">
            <%= f.input :family_bio, :required => true, :autofocus => true, input_html: {class: "form-indent"} %>
          </div>
          <div class="form-group col-xs-12">
            <%= f.input :dietary_bio, :required => true, :autofocus => true, input_html: {class: "form-indent"} %>
          </div>
          <div class="form-group col-xs-12">
            <%= f.input :why_nutrition, :required => true, :autofocus => true, input_html: {class: "form-indent"} %>
          </div>
          <div class="form-group col-xs-12">
            <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
              <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
            <% end %>
          </div>
          <div class="form-group">
            <button id="change-password" class="btn form-group">Change Password
            </button>
          </div>
          <div id="change-password-fields" class="form-group">
            <div class="form-group col-xs-12">
              <%= f.input :password, :autocomplete => "off", :hint => "leave it blank if you don't want to change it", :required => false, label: "Change Password", input_html: {class: "form-indent"} %>
            </div>
            <div class="form-group col-xs-12">
            <%= f.input :password_confirmation, :required => false, label: "Confirm New Password", input_html: {class: "form-indent"} %>
            </div>
          </div>
          <div class="form-group col-xs-12">
            <% if resource.avatar_file_name %>
              <%= image_tag resource.avatar.url %>
              <h3>Want to change your photo?</h3>
            <% else %>
              <h3>Add a photo</h3>
            <% end %>
          </div>
          <div class="form-group col-xs-12">
                  <%= f.file_field :avatar, style: "padding: 5%" %>
          </div>
          <div class="form-group col-xs-12">
            <%= f.input :current_password, :hint => "we need your current password to confirm your changes", :required => true, input_html: {class: "form-indent"} %>
          </div>
        </div>
        <div class="row">
          <div class="col-xs-3"></div>
          <div class="form-group col-xs-6">
            <%= f.submit  "Update Account", class: " btn-block tilt kindrd-button" %>
          </div>
        </div>

      <% end %>

      <%= link_to "Back", :back %>
    </div>
  </div>
</div>