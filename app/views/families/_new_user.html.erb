<%= form_for(@new_user) do |f| %>
  <% if @new_user.errors.any? %>
    <div id='error_explanation'>
      <h2><%= pluralize(@new_user.errors.count, 'error') %> prohibited this family member from being saved:</h2>
      <ul>
        <% @new_user.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <form class='form-horizontal' role='form'>
    <div class='form-group'>
      <%= f.label :name %>
      <%= f.text_field :name, placeholder: "First Name" %>
    </div>
    <div class='form-group'>
      <%= f.label :age %>
      <%= f.text_field :age, placeholder: "City, State or Zip Code" %>
    </div>
    <div class='form-group'>
    </div>
    <div class='actions'>
      <%= f.submit %>
    </div>
  </form>
<% end %>