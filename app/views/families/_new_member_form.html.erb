<div id="child-forms-div-<%=i%>" class='col-xs-12 member-form-green' >
<%= f.fields_for :users, @new_user do |ff| %>
  <% if @new_user.errors.any? %>
    <div id='error_explanation'>
      <h2><%= pluralize(@new_user.errors.count, 'error') %> prohibited this table guest from being saved:</h2>
      <ul>
        <% @new_user.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="row form-group">
    <div class="col-xs-1"></div>
    <div class="col-xs-5">
      <%= label_tag :first_name, "First Name", class: "large-white-font" %>
      <%= ff.text_field :first_name, placeholder: 'First Name', style: "padding-left: 5%"%>
    </div>
    <div class="col-xs-5">
      <%= label_tag :last_name, "Last Name", class: "large-white-font" %>
      <%= ff.text_field :last_name, placeholder: 'Last Name', style: "padding-left: 5%"%>
    </div>
  </div>
  <div class="row form-group">
    <div class="col-xs-12">
      <%= label_tag :birth_date, "Birth Date", class: "large-white-font" %>
    </div>
    <div class="col-xs-3 col-sm-12 col-md-12 col-lg-12">
    <%= ff.date_select :birth_date, prompt: { day: 'Day', month: 'Month', year: 'Year' }, start_year: Date.today.year, end_year: 1910, :class => "date-select" %>
    </div>
  </div>
  <div class="col-xs-12 large-white-font form-group">
    <div class="radio-inline" style="margin-left: 5%">
      <input type="radio" name="family[users_attributes][<%=i%>][sex]" id="sexRadios-<%=i%>-1" value="Female">
      <label class="radio inline control-label" style="line-height: 0.4">
        <b>Female</b>
      </label>
    </div>
    <div class="radio-inline">
      <input type="radio" name="family[users_attributes][<%=i%>][sex]" id="sexRadios-<%=i%>-2" value="Male">
      <label class="radio inline control-label" style="line-height: 0.4">
        <b>Male</b>
      </label>
    </div>
  </div>
  <div class="form-group col-xs-12">
    <div class="col-xs-3"></div>
    <div class="col-xs-7" style="background-color: white; border-radius: 10px; line-height: 1.5">
      <div class="checkbox">
        <input id="patient-focus-checkbox-<%=i%>" name="patient_focus" type="checkbox" class="patient-focus" value="<%=i%>" style="margin-top: 8%">
        <span id="focus-text-<%=i%>" class="patient-focus-text" style="font-size: 20px">Appointment is for this person</span>
        <span id="focus-text2-<%=i%>" class="patient-focus-text2" style="font-size: 20px">Change appointment to be for this person</span>
      </div>
    </div>
  </div>
  <div class="form-group patient-focus-forms" id="patient-focus-form-<%=i%>">
    <div class="col-xs-2"></div>
    <div class="col-xs-4">
      <%= label_tag :height, "Height", class: "large-white-font"%>
      <div class="row">
        <div class="col-xs-6">
          <%= label_tag :feet, "Feet", class: "white-font"%>
          <input type="text" name="family[users_attributes][<%=i%>][height][feet]" placeholder="ft" style="padding-left: 10%"/>
        </div>
        <div class="col-xs-6">
          <%= label_tag :inches, "Inches", class: "white-font"%>
          <input type="text" name="family[users_attributes][<%=i%>][height][inches]" placeholder="in" style="padding-left: 10%"/>
        </div>
      </div>
    </div>
    <div class="col-xs-4">
      <%= label_tag :weight, "Weight", class: "large-white-font"%>
      <div class="row">
        <div class="col-xs-6">
          <%= label_tag :pounds, "Pounds", class: "white-font"%>
          <input type="text" name="family[users_attributes][<%=i%>][weight][pounds]" placeholder="lb" style="padding-left: 10%"/>
        </div>
        <div class="col-xs-6">
          <%= label_tag :ounces, "Ounces", class: "white-font"%>
          <input type="text" name="family[users_attributes][<%=i%>][weight][ounces]" placeholder="oz" style="padding-left: 10%"/>
        </div>
      </div>
    </div>
  </div>
<% end %>
</div> 
