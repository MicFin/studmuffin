<div class="container">
  <div class="row">
    <div class="col-xs-12">
    <%= image_tag("logo.png", class: "img-responsive") %>
    </div>
  </div>
  <div class="row">
  			<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
	  		<%= devise_error_messages! %>
	  <div class="col-xs-6 orange-background" style="padding: 2%; border-radius: 15px">
	  	<div class="col-xs-12">
	  		<h2 class="large-white-font form-group">Forgot your password? </h2>
	  	</div>
	  	<div class="col-xs-12 form-group">
	  		<%= f.email_field :email, autofocus: true, placeholder: 'Enter your email address', style: "padding-left: 5%"   %>
	  	</div>

	  	<div class="form-group">
	  		<%= f.submit "Send me reset password instructions", class: "btn-block tilt kindrd-button" %>
	  	</div>
		<% end %>
		</div>
		<div class="col-xs-6">
			<div class="col-xs-12">
			<%= image_tag("Confused-kid.jpg", class: "img-responsive") %>
			</div>
			<div class="col-xs-12 text-center">
				<%= render "devise/shared/links" %>
			</div>
		</div>
	</div>
</div>