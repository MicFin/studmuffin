                  <div class="checkbox">
                    <input class="allergy-checkbox" id="allergy-<%=member.id%>-checkbox" name="user[<%=member.id%>][allergies][]" type="checkbox" value="<%=allergy.id%>"> <%=member.first_name%>
                  </div>
                  <% if allergy.input_option == true %>
                    <div class="other-field" id="allergy-<%=member.id%>-div">
