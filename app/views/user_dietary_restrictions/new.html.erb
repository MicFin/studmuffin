
<h1>What makes your table special?</h1>
<div class="col-xs-12 diet-question-div">
  <h1>Does your family have any food allergies, intolerances, diseases, or other conditions that require dietary restrictions?</h1>
  <div>
    <button class="btn btn-lg btn-success restrictions-show-button">Yes</button>
    <button class="btn btn-lg btn-success no-restrictions-show-button">No</button>
  </div>
</div>
<div class="restrictions-div">
  <button class="btn btn-lg btn-success next-question-button">Next</button>
</div>

<%= form_for(@user_dietary_restriction) do |f| %>
<div class="row restrictions-div">
  <div class="col-xs-12 col-sm-4 col-md-4 col-lg-4">
    <div class="panel-group" id="accordion-allergy">
      <% @allergies.each do |allergy| %>
      <div class="panel panel-default">
        <div class="panel-heading">
          <h4 class="panel-title">
            <a data-toggle="collapse" data-parent="#accordion-allergy" href="#collapse-<%=allergy.id%>" id="allergy-<%=allergy.id%>-popover" <data-container="body" data-toggle="popover" data-placement="top" data-content="<%=allergy.description%>">
              <%= allergy.name %>
            </a>
          </h4>
        </div>
        <div id="collapse-<%=allergy.id%>" class="panel-collapse collapse">
          <div class="panel-body">
            <ul style="list-style-type: none">
              <% @family_members.each do |member| %>
              <li>
                <div class="checkbox">
                  <input id="allergy-<%=member.id%>-checkbox" name="user[<%=member.id%>][allergies][]" type="checkbox" value="<%=allergy.id%>"> <%=member.first_name%>
                </div> 
                <% if allergy.input_option == true %>
                  <div id="allergy-<%=member.id%>-div">
                    <input id="allergy-<%=member.id%>-field" name="user[<%=member.id%>][other][<%=allergy.id%>]" type="text" placeholder=" Please specify"/>
                  </div>
                <% end %> 
              </li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
      <div class="clearfix hidden-xs"></div>
      <% end %>
    </div>
  </div>
  <div class="col-xs-12 col-sm-4 col-md-4 col-lg-4">
    <div class="panel-group" id="accordion-intolerance">
      <% @intolerances.each do |allergy| %>
      <div class="panel panel-default">
        <div class="panel-heading">
          <h4 class="panel-title">
            <a data-toggle="collapse" data-parent="#accordion-intolerance" href="#collapse-<%=allergy.id%>" id="intolerance-<%=allergy.id%>-popover" <data-container="body" data-toggle="popover" data-placement="top" data-content="<%=allergy.description%>">
              <%= allergy.name %>
            </a>
          </h4>
        </div>
        <div id="collapse-<%=allergy.id%>" class="panel-collapse collapse">
          <div class="panel-body">
            <ul style="list-style-type: none">
              <% @family_members.each do |member| %>
                <li>
                  <div class="checkbox">
                    <input id="intolerance-<%=member.id%>-checkbox" name="user[<%=member.id%>][allergies][]" type="checkbox" value="<%=allergy.id%>"> <%=member.first_name%>
                  </div>  
                </li>
                <% if allergy.input_option == true %>
                  <li>
                  <div id="intolerance-<%=member.id%>-div">
                    <input id="intolerance-<%=member.id%>-field" input name="user[<%=member.id%>][other][<%=allergy.id%>]" type="text" placeholder=" Please specify"/>
                    </div>
                  </li>
                <% end %>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
      <div class="clearfix hidden-xs"></div>
      <% end %>
    </div>
  </div>
  <div class="col-xs-12 col-sm-4 col-md-4 col-lg-4">
    <div class="panel-group" id="accordion-disease">
      <% @diseases.each do |allergy| %>
      <div class="panel panel-default">
        <div class="panel-heading">
          <h4 class="panel-title">
            <a data-toggle="collapse" data-parent="#accordion-disease" href="#collapse-<%=allergy.id%>" id="disease-<%=allergy.id%>-popover" <data-container="body" data-toggle="popover" data-placement="top" data-content="<%=allergy.description%>">
              <%= allergy.name %>
            </a>
          </h4>
        </div>
        <div id="collapse-<%=allergy.id%>" class="panel-collapse collapse">
          <div class="panel-body">
            <ul style="list-style-type: none">
              <% @family_members.each do |member| %>
              <li>
                <div class="checkbox">
                  <input id="disease-<%=member.id%>-checkbox" name="user[<%=member.id%>][allergies][]" type="checkbox" value="<%=allergy.id%>"> <%=member.first_name%>
                </div>  
                <% if allergy.input_option == true %>
                  <div id="disease-<%=member.id%>-div">
                    <input id="disease-<%=member.id%>-field" name="user[<%=member.id%>][other][<%=allergy.id%>]" type="text" placeholder=" Please specify"/>
                  </div>
                <% end %>
              </li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
      <div class="clearfix hidden-xs"></div>
      <% end %>
    </div>
  </div>
</div>

<div class="other-issues-div">
  <h2>Please add any other information that you would like to share with Tara  </h2>
  <ul style="list-style-type: none">
    <% @family_members.each do |member| %>
    <li><%=member.first_name%></li>
    <li>
      <div id="more-<%=member.id%>-div">
       <input id="more-<%=member.id%>-field" name="user[<%=member.id%>][more]" type="text" placeholder="Please specify"/>
      </div>
    </li>
    <% end %>
  </ul>
</div>

<div class='actions create-diets-button'>
  <%= f.submit %>
</div>
<% end %>
