<div class="col-xs-12">
	<div class="row text-center orange-background" id="orange-bar" style="height: 20px; margin-left: -20%; margin-right: -20%">

	</div>

	<div class="row text-center" style="position: relative">
		<div class="row" id="intro-container-1">
			<div class="row">
				<div class="col-xs-2" style="margin-top: 2%; margin-bottom: 2%">
								<%= image_tag(@appointment.dietitian.avatar.url, class: "img-circle", style: "height: 150%; width: 150%") %>
				</div>
				<div class="col-xs-8 form-group">
					<div class="col-xs-12 form-group">
						<h2 class="text-center">Thank you for joining me <span class="green cursive" style="font-size: 50px"><%=@user.first_name %></span></h2>
						<h2 class="text-center">My name is <%= @appointment.dietitian.first_name%> <%= @appointment.dietitian.last_name %> and I am your       
						<a data-toggle="modal" data-target="#rdModal" style="cursor: pointer" class="nutritionist-link tilt">
			        <span class="bright-green" style="font-size: 50px">KindRD</span><span class="orange" style="font-size: 50px">Nutritionist</span> 
			        <span class="glyphicon glyphicon-question-sign green"></span>
			      </a> </h2>
			      <h2 class="text-center">Let's get you set up for your session!   
			    	</h2>
		    	</div>
		    </div>
		  </div>
	    <div class="row orange-background full-row">
	  		<h1 class="white-font">Please click</h1>
	  		<button id="intro-container-1-button" type="button" class=" btn-lg tilt kindrd-button" data-toggle="modal" >Next</button>
	  	</div>
	  </div>
		<div class="row" id="intro-container-2">
			<div class="row">
				<div class="col-xs-2" style="margin-top: 2%; margin-bottom: 2%">
								<%= image_tag(@appointment.dietitian.avatar.url, class: "img-circle", style: "height: 150%; width: 150%") %>
				</div>
				<div class="col-xs-1"></div>
				<div class="col-xs-8 form-group">
						<h2 class="text-center">When you are ready to begin, please click the "Allow" button to turn on your computer's webcam and we can begin our session!</h2>
		    </div>
		  </div>
		  <div class="row" style="height: 100px"></div>
	  </div>
		<div class="row" id="intro-container-4">
			<div class="row">
				<div class="col-xs-2" style="margin-top: 2%; margin-bottom: 2%">
								<%= image_tag(@appointment.dietitian.avatar.url, class: "img-circle", style: "height: 150%; width: 150%") %>
				</div>
				<div class="col-xs-1"></div>
				<div class="col-xs-8 form-group">
						<h2 class="text-center">Oops! You did not turn on your webcam.  Please click the "Allow" button to turn on your computer's webcam.</h2>
		    </div>
		  </div>
		  <div class="row" style="height: 100px"></div>
    </div>


<%= render "/shared/kindrd_nutritionist_modal" %> 
		<div class="row">
			<div class="col-xs-4 dietitian-info" style="margin-left: -5%">
				<div class="col-xs-12 in-session-rd-bio">
					<div class="col-xs-4">
					 <h5>Education</h5>
					</div>
					<div class="col-xs-4">
					 <h5>Specialties</h5>
					</div>
					<div class="col-xs-4">
					 <h5>Family's Diet</h5>
					</div>
				</div>
			</div>

			<div class="col-xs-6 in-session-rd-video" id="videobox2">
			</div>
			<div class="col-xs-3 video-center" id="user-video">
				<div class="col-xs-12" id="videobox">
				</div>
			</div>
		</div>
	</div>

	<div class="row text-center dietitian-info" style="margin-left: 5%">
		<h1> <%= @appointment.dietitian.first_name%> <%= @appointment.dietitian.last_name %> </h1>
	</div>


</div>
	

